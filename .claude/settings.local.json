{
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(./gradlew compileJava:*)",
      "Bash(./gradlew test:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker info:*)",
      "Bash(docker stop:*)",
      "Bash(docker rm:*)",
      "Bash(curl:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker logs:*)",
      "Bash(git add:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lint.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
