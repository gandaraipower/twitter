{
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(./gradlew compileJava:*)",
      "Bash(./gradlew test:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lint.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
